<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adnet.mytraffictestapp.MainActivity"
    android:background="#084901"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/llTestDrive">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/test_drive" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_ok_button_background"
            android:text="Test Drive"
            android:id="@+id/buttonOne"
            android:textColor="#FFFE0303"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/llTestDrive"
        android:layout_alignLeft="@+id/llTestDrive"
        android:layout_alignStart="@+id/llTestDrive"
        android:id="@+id/llTrafficSigns"
        android:layout_alignRight="@+id/llTestDrive"
        android:layout_alignEnd="@+id/llTestDrive"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/traffic_signs" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_ok_button_background"
            android:text="Traffic Signs"
            android:id="@+id/buttonTwo"
            android:textColor="#FFFE0303"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/llTrafficSigns"
        android:layout_alignLeft="@+id/llTrafficSigns"
        android:layout_alignStart="@+id/llTrafficSigns"
        android:layout_alignRight="@+id/llTrafficSigns"
        android:layout_alignEnd="@+id/llTrafficSigns"
        android:id="@+id/llHighwayCode"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="174dp"
            android:layout_height="104dp"
            android:id="@+id/imageView3"
            android:src="@drawable/highway_code" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_ok_button_background"
            android:text="Highway Code"
            android:id="@+id/buttonThree"
            android:textColor="#FFFE0303"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</RelativeLayout>
